<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F0E3" android:padding="32dp"
    tools:context=".forget_password">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forgotPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/titleForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp" />

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enter your registered email address to receive a password reset link."
            android:textSize="16sp"
            android:textColor="#555555"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleForgotPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/editTextEmailForgot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#333333"
            android:hintTextColor="#888888"
            android:background="@drawable/rounded_input_field" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/instructionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/buttonResetPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF8C42"
            android:paddingVertical="12dp"
            app:cornerRadius="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/editTextEmailForgot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>