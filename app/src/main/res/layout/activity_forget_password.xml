<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F0E3"
    android:padding="32dp"
    tools:context=".forget_password">

    <!-- CardView is now the container for the form content -->
    <androidx.cardview.widget.CardView
        android:id="@+id/forgotPasswordCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:background="#FFFFFF">

        <!-- Original ConstraintLayout remains as the single child inside the CardView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/forgotPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"> <!-- Added internal padding for card spacing -->

            <TextView
                android:id="@+id/titleForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="0dp" /> <!-- Removed large top margin, relying on card padding -->

            <TextView
                android:id="@+id/instructionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enter your registered email address to receive a password reset link."
                android:textSize="16sp"
                android:textColor="#555555"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/titleForgotPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/editTextEmailForgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="#333333"

                android:background="@drawable/rounded_input_field"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/instructionText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/buttonResetPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF8C42"
                android:paddingVertical="12dp"
                app:cornerRadius="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/editTextEmailForgot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" /> <!-- Constraint to define the bottom of the card -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
