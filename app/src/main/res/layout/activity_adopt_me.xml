<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Dog Image -->
        <ImageView
            android:id="@+id/imgDog"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@drawable/rounded_image_bg"
            android:contentDescription="Dog Image" />

        <!-- Dog Breed -->
        <TextView
            android:id="@+id/tvBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="German Shepherd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />

        <!-- Status Tag -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Adopted"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="@drawable/status_bg"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <!-- Dog Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buddy is a friendly and energetic dog who loves to play fetch and go on walks. He is up-to-date on all vaccinations."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp" />

        <!-- Adopt Button -->
        <Button
            android:id="@+id/btnAdopt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adopt Buddy"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF5722"
            android:layout_marginTop="20dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
