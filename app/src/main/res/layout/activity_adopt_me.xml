<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1. Hero Image (Outside CardView) -->
            <ImageView
                android:id="@+id/imgDog"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="-30dp"
                android:contentDescription="Image of the dog up for adoption"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_german" />

            <!-- 2. Profile Details (Inside CardView) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Breed Name -->
                    <TextView
                        android:id="@+id/tvBreed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="German Shepherd"
                        android:textColor="#212121"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <!-- Status Tag -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/status_tag_bg"
                        android:paddingBottom="6dp"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        android:paddingTop="6dp"
                        android:text="For Adoption"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="#00897B" />

                    <!-- Profile Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="12dp"
                        android:text="Buddy's Profile"
                        android:textColor="#212121"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Buddy is a friendly and energetic German Shepherd who loves to play fetch and go on long walks. He is up-to-date on all vaccinations and is looking for a forever home with an active family. He is great with kids and other dogs after a short introduction period."
                        android:textColor="#616161"
                        android:textSize="16sp" />

                    <!-- Adopt Button -->
                    <Button
                        android:id="@+id/btnAdopt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#FF5722"
                        android:elevation="4dp"
                        android:padding="14dp"
                        android:text="Adopt Buddy"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
